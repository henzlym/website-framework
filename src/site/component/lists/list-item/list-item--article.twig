<div class="card list-item list-item--{{ type }} {{ classes }}">

	{% if image %}
		{% render "@content-picture" with {
			classes:'aspect-ratio-widescreen w-100',
			src:'placeholder'
		}  %}
	{% endif %}

	<div class="card-body w-100">

		{% if categories %}
			{% render '@partials-link' with {
				classes:'card-tag',
				icon: '',
				title: categories,
				rel:'tag'
			} %}
		{% endif %}

		<h4 class="card-title">{{ title }}</h4>

		{% if description %}
			<p class="card-text d-none d-lg-block">{{ description }}</p>
		{% endif %}

		{% if meta.author %}
			<span class="card-author">
				{% render "@partials-author" with meta.author %}
			</span>
		{% endif %}

	</div>
</div>
